@model CheckItem

@{
    ViewData["Title"] = "Add";
    string checkListId = (string)Context.Request.Query["checklistId"];
}

<partial name="_PageTitlePartial" model="@("Add Check Item")" />
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mx-auto">
            <form asp-action="@((string)ViewData["action"] == "Add" ? "Add" : "Update")" method="post">
                <input type="hidden" asp-for="CheckListId" value="@checkListId" />
                <div class="form-group">
                    <label asp-for="Text"></label>
                    <input class="form-control" asp-for="Text" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                </div>
                <div class="form-group">
                    <input class="mx-2" asp-for="IsChecked" />
                    <label asp-for="IsChecked"></label>
                </div>
                @if ((string)ViewData["action"] == "Add")
                {
                    <button type="submit" class="btn btn-success">Add</button>
                }
                else
                {
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-info">Update</button>
                }
            </form>
        </div>
    </div>
</div> 