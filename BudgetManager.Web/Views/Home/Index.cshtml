@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid container-main">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 my-4 py-5 mx-auto text-center text-light">
            <h1><b>BudgetManager</b></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mx-auto bg-success rounded text-center py-3">
            <a class="btn btn-success text-white w-100" asp-action="Add" asp-controller="Income"><i class="fa-solid fa-arrow-trend-down fa-6x"></i></a>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mx-auto bg-warning rounded text-center py-3">
            <a class="btn btn-warning text-white w-100" asp-action="Add" asp-controller="Expense"><i class="fa-solid fa-arrow-trend-up fa-6x"></i></a>
        </div>
    </div>
</div>

<style>
    .container-main {
        height: 100vh !important;
        background: #000054;
    }
</style>
